{
    "name": "simplon/payment",
    "description": "Product based payment proxy library. Paypal RESTful, Paypal Mobile, Stripe and extendable.",
    "homepage": "https://github.com/fightbulc/simplon_payment",
    "version": "1.0.0",
    "type": "library",
    "keywords": [
        "payment",
        "api",
        "stripe",
        "paypal rest",
        "paypal mobile"
    ],

    "license": "MIT",

    "authors": [
        {
            "name": "Tino Ehrich",
            "email": "opensource@efides.com",
            "role": "developer"
        }
    ],

    "minimum-stability": "stable",

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/fightbulc/Codeception"
        }
    ],

    "require": {
        "php": ">=5.4",
        "fightbulc/php_curl": "1.0.*",
        "simplon/helper": "0.6.*"
    },

    "require-dev": {
        "codeception/codeception": "dev-jsonrpc",
        "codeception/aspect-mock": "0.4.*"
    },

    "autoload": {
        "psr-0": {
            "Simplon\\Payment": "src/"
        },
        "classmap" : [
            "src/Simplon/Payment/Provider/IcePayIdeal/Api"
        ]
    }
}
